<h1>Burgers!</h1>
<div class="freshBurgers">
  <h2>Burgers that are not devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">DEVOUR IT!</button>
          </form>
          <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>

</div>

<div class="eatenBurgers">
  <h2>Burgers that are devoured!</h2>


  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">Undevour!</button>
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="addBurger">
  <h2>Add a Burger</h2>
  <form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>
